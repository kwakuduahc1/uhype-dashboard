@article{Park2019,
   abstract = {OBJECTIVES: Since 2011, the Korean government has implemented
differential cost sharing to increase the utilization of primary
care clinics for the management of chronic diseases. The
objective of this study was to examine the impact of the
prescription drug cost-sharing increase on outpatients'
selection of the medical care institution. STUDY DESIGN: This
