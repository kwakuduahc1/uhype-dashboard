   month = {12},
   pages = {833-840},
   pmid = {32541665},
   publisher = {Springer Nature},
   title = {Health care utilisation and out-of-pocket expenditure associated with hypertension: an analysis of Australian adults from the 45 and Up Study},
   volume = {34},
   year = {2020},
}
